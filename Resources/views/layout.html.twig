{% extends 'base.html.twig' %}
{% import "macros/widgets.html.twig" as widgets %}

{% block page_title %}Timesheet Approval{% endblock %}

{% block main %}
    {% if warningNoUsers is defined %}
      {% if warningNoUsers %}
        {{ widgets.callout('danger', 'warning.noUserToApprove'|trans) }}
      {% endif %}
    {% endif %}

    <div class="row">
        <div class="col-md-12" id="ApprovalBundle-content">
            <div class="card">
                <div class="card-header">
                    {% if canViewHoursApproval %}
                        {{ include('@Approval/navigation.html.twig') }}
                    {% endif %}
                </div>
                <div class="card-body">
                    <div class="tab-content">
                        {% block report %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Support Contact Information -->
    <div class="row mt-3">
        <div class="col-md-12 text-end">
            <p class="text-muted mb-0">
                <i class="fas fa-life-ring"></i> For support and additional features, please reach out to <strong>Mitchell Artz</strong>
            </p>
        </div>
    </div>
{% endblock %}
